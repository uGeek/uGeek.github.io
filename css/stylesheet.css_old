    #ugeek { left: 42%; } }



body {
    font-family: "Lato";
    font-size: 18px; , Lato; }

@media all and (min-width: 1000px){
    body {
        max-width: 80%;
        margin: auto; } }

@media all and (max-width: 1000px){
    body { margin: 1em; } }


#logo img {
  border-radius: 10px;
